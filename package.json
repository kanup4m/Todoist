{
	"name": "todoist",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"react": "^16.10.2",
		"react-dom": "^16.10.2",
		"react-icons": "^3.7.0",
		"moment": "^2.24.0",
		"firebase": "^6.2.4",
		"node-sass": "^4.12.0",
		"prop-types": "^15.7.2",
		"react-scripts": "3.4.4"
	},
	"devDependencies": {
		"@testing-library/react": "^9.1.3"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject"
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.js",
			"!src/index.js",
			"!src/firebase.prod.js",
			"!src/hooks/*.js",
			"!src/context/*.js"
		],
		"coverageThreshold": {
			"global": {
				"branches": 90,
				"functions": 90,
				"lines": 90,
				"statements": 90
			}
		},
		"coverageReporters": [
			"html",
			"text"
		]
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
